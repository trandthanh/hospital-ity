<div class="dashboard-content background-aliceblue">

  <% unless @currentbookings.empty? %>
    <div class="sejours-container">
      <h1 class="yankeesblue mb-5">Séjours en cours</h1>
      <div class="row">
        <% @currentbookings.each do |booking| %>
          <div class="col-4 px-1 py-2">
            <%= link_to flat_path(booking.flat) do %>
              <div class="card-book-dashboard">
                <% if booking.flat.photo.blank? %>
                  <p>Pas de photos</p>
                <% else %>
                    <div class="booking-photo" style="background-image: url('<%= cl_image_path booking.flat.photo %>')"></div>
                <% end %>
                <div class="booking-description pl-2 mt-3">
                  <p class="p-strip">Vous habitez actuellement chez <h4 class="h4-strip celestialblue"><%= booking.flat.user.first_name %></h4>
                    (séjour du <%= booking.arrival %> au <%= booking.departure %>)</p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="sejours-container">
    <h1 class="yankeesblue mb-5">Séjours prévus</h1>
    <div class="row">
      <% @futurebookings.each do |fb| %>
        <div class="col-4 px-1 py-2">
          <%= link_to flat_path(fb.flat) do %>
            <div class="card-book-dashboard">
              <% if fb.flat.photo.blank? %>
                <p>Pas de photos</p>
              <% else %>
                  <div class="booking-photo" style="background-image: url('<%= cl_image_path fb.flat.photo %>')"></div>
              <% end %>
              <div class="booking-description pl-2 mt-3">
                <p class="p-strip">Vous allez habité chez <h4 class="h4-strip celestialblue"><%= fb.flat.user.first_name %></h4>
                  (séjour du <%= fb.arrival %> au <%= fb.departure %>)</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="sejours-container padding-bottom-100">
    <h1 class="yankeesblue mb-5">Séjours passés</h1>
    <div class="row">
      <% @pastbookings.each do |booking| %>
        <div class="col-4 px-1 py-2">
          <%= link_to flat_path(booking.flat) do %>
            <div class="card-book-dashboard">
              <% if booking.flat.photo.blank? %>
                <p>Pas de photos</p>
              <% else %>
                  <div class="booking-photo" style="background-image: url('<%= cl_image_path booking.flat.photo %>')"></div>
              <% end %>
              <div class="booking-description pl-2 mt-3">
                <p class="p-strip">Vous avez habité chez <h4 class="h4-strip celestialblue"><%= booking.flat.user.first_name %></h4>
                  (séjour du <%= booking.arrival %> au <%= booking.departure %>)</p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

