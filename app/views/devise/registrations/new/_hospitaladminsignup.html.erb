<div class="container">
  <div class="row ">
    <div class="xs-12 ">
      <div class="form-login">
        <h1 class="celestialblue">Inscrire mon centre</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <% @user.errors.full_messages.each do |msg| %>
            <p><%= msg %></p>
          <% end %>
          <div class="form-inputs">

            <%= f. hidden_field :hospital_admin, :value => true %>
            <%#= f.input :code_id, :label_method => :code %>

            <%= f.input :family,
                        required: true,
                        autofocus: true,
                        label: 'Votre nom de famille',
                        input_html: { autocomplete: "family" }%>
            <%= f.input :first_name,
                        required: true,
                        label: 'Votre prÃ©nom',
                        input_html: { autocomplete: "first_name" }%>
            <%= f.input :hospital_id, collection: Hospital.all, :label_method => :hospital_name,
                        required: true,
                        label: 'Votre centre de soin',
                        input_html: { autocomplete: "hospital_id" }%>
            <%= f.input :email,
                        required: true,
                        autofocus: true ,
                        label: 'Votre email',
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        label: 'Votre mot de passe',
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        label: 'Confirmer votre mot de passe',
                        required: true,
                        input_html: { autocomplete: "new-password" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Je deviens Admin de mon centre", class: "btn" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


